---
const {info = {}} = Astro.props;
---
<section id="contact" class="py-16 md:py-24 bg-true-black">
  <div class="mx-auto px-4 max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl text-gold mb-4">Contact Us</h2>
      <p class="max-w-2xl mx-auto">
        We'd love to hear from you! Whether you have a question, feedback, or want to make a reservation, we're here to help.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-true-black p-8 rounded-lg shadow-md">
        <h3 class="text-2xl font-semibold mb-6">Contact us</h3>
        <div class="mb-8">
          <div class="flex items-start mb-4">
            <div class="w-10 h-10 bg-gold rounded-full flex items-center justify-center mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-black-olive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gold mb-1">Address</h4>
              <p>{info.address}</p>
              <p>{info.city}</p>
            </div>
          </div>
          
          <div class="flex items-start mb-4">
            <div class="w-10 h-10 bg-gold rounded-full flex items-center justify-center mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-black-olive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gold mb-1">Phone</h4>
              <p>
                <a href={`tel:${info.phone}`} class="hover:text-satin-gold transition-colors">{info.phone}</a>
              </p>
            </div>
          </div>
          
          <div class="flex items-start mb-4">
            <div class="w-10 h-10 bg-gold rounded-full flex items-center justify-center mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-black-olive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium mb-1 text-gold">Email</h4>
              <p class="text-gray-200">
                <a href={`mailto:${info.email}`} class="hover:text-satin-gold transition-colors">{info.email}</a>
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-10 h-10 bg-gold rounded-full flex items-center justify-center mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-black-olive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium mb-1 text-gold">Opening Hours</h4>
              {info.schedule && (
                <div class="text-sm grid grid-cols-2 gap-x-4 mt-1">
                  {info.schedule.daily && (
                    <>
                      <p class="text-white text-left">Daily:</p>
                      <p class="text-white text-right">{info.schedule.daily}</p>
                    </>
                  )}
                  {info.schedule.monday && (
                    <>
                      <p class="text-white text-left">Monday:</p>
                      <p class="text-white text-right">{info.schedule.monday}</p>
                    </>
                  )}
                  {info.schedule.tuesday && (
                    <>
                      <p class="text-white text-left">Tuesday:</p>
                      <p class="text-white text-right">{info.schedule.tuesday}</p>
                    </>
                  )}
                  {info.schedule.wednesday && (
                    <>
                      <p class="text-white text-left">Wednesday:</p>
                      <p class="text-white text-right">{info.schedule.wednesday}</p>
                    </>
                  )}
                  {info.schedule.thursday && (
                    <>
                      <p class="text-white text-left">Thursday:</p>
                      <p class="text-white text-right">{info.schedule.thursday}</p>
                    </>
                  )}
                  {info.schedule.friday && (
                    <>
                      <p class="text-white text-left">Friday:</p>
                      <p class="text-white text-right">{info.schedule.friday}</p>
                    </>
                  )}
                  {info.schedule.saturday && (
                    <>
                      <p class="text-white text-left">Saturday:</p>
                      <p class="text-white text-right">{info.schedule.saturday}</p>
                    </>
                  )}
                  {info.schedule.sunday && (
                    <>
                      <p class="text-white text-left">Sunday:</p>
                      <p class="text-white text-right">{info.schedule.sunday}</p>
                    </>
                  )}
                </div>
              )}
              <p class="mt-1 italic text-sm text-satin-gold">(kitchen closes at 21h)</p>
            </div>
          </div>
        </div>

      </div>
      
      <!-- Contact Information -->
      <div>
        <h3 class="text-2xl font-semibold mb-6">Visit Us</h3>

        <!-- Map -->
        <div class="rounded-lg overflow-hidden shadow-md h-96 bg-gray-100">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2864.57828103213!2d15.220545893140144!3d44.11269304804122!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4761fb9c9040e957%3A0x8035752ff148871a!2sThe%20Botanist!5e0!3m2!1sen!2shr!4v1743871284662!5m2!1sen!2shr" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrer-policy="no-referer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>