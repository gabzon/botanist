<section id="testimonials" class="section bg-moss-green/5">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-moss-green mb-4">What Our Guests Say</h2>
      <p class="max-w-2xl mx-auto text-black-olive">
        With over 4,000 reviews and a 4.9 rating, we're proud to be among Zadar's top dining spots.
      </p>
    </div>
    
    <!-- Testimonials Slider -->
    <div 
      x-data="{ 
        testimonials: [
          {
            name: 'Marko H.',
            location: 'Zagreb, Croatia',
            text: 'As a non-vegan, I was skeptical, but The Botanist completely changed my perspective. Their Dalmatian Bean Stew rivals any traditional version I\'ve had. A must-visit in Zadar!',
            rating: 5
          },
          {
            name: 'Sophie L.',
            location: 'Berlin, Germany',
            text: 'The attention to detail in every dish is remarkable. You can taste the freshness of ingredients and the passion behind the cooking. The Fig & Almond Tart was divine!',
            rating: 5
          },
          {
            name: 'Ana K.',
            location: 'Split, Croatia',
            text: 'Finally, a restaurant that understands vegan food isn\'t just salads! The flavors are bold, the presentation beautiful, and the staff knowledgeable. Worth the trip from Split!',
            rating: 5
          },
          {
            name: 'Thomas B.',
            location: 'Vienna, Austria',
            text: 'We visited during our honeymoon and had the most memorable dining experience. The wild mushroom gnocchi was exceptional, and they made our evening special with a surprise dessert.',
            rating: 5
          }
        ],
        activeIndex: 0,
        setActiveIndex(index) {
          this.activeIndex = index;
        },
        next() {
          this.activeIndex = (this.activeIndex + 1) % this.testimonials.length;
        },
        prev() {
          this.activeIndex = (this.activeIndex - 1 + this.testimonials.length) % this.testimonials.length;
        },
        init() {
          setInterval(() => this.next(), 8000);
        }
      }"
      x-init="init()"
      class="relative max-w-4xl mx-auto"
    >
      <!-- Testimonial Cards -->
      <div class="overflow-hidden relative rounded-xl">
        <div 
          class="flex transition-transform duration-500 ease-in-out" 
          :style="`transform: translateX(-${activeIndex * 100}%)`"
        >
          <template x-for="(testimonial, index) in testimonials" :key="index">
            <div class="w-full flex-shrink-0 p-6 md:p-10 bg-white rounded-xl shadow-md">
              <!-- Stars -->
              <div class="flex mb-4">
                <template x-for="i in 5">
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="h-5 w-5" 
                    :class="i <= testimonial.rating ? 'text-satin-gold' : 'text-gray-300'" 
                    viewBox="0 0 20 20" 
                    fill="currentColor"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </template>
              </div>
              
              <!-- Quote -->
              <p class="text-black-olive italic mb-6" x-text="testimonial.text"></p>
              
              <!-- Author -->
              <div class="flex items-center">
                <div class="w-10 h-10 bg-moss-green/20 rounded-full flex items-center justify-center text-moss-green font-medium" x-text="testimonial.name.charAt(0)"></div>
                <div class="ml-4">
                  <h4 class="font-medium" x-text="testimonial.name"></h4>
                  <p class="text-sm text-black-olive/70" x-text="testimonial.location"></p>
                </div>
              </div>
            </div>
          </template>
        </div>
      </div>
      
      <!-- Navigation Dots -->
      <div class="flex justify-center mt-6 space-x-2">
        <template x-for="(testimonial, index) in testimonials" :key="index">
          <button 
            @click="setActiveIndex(index)" 
            class="w-3 h-3 rounded-full transition-colors duration-300"
            :class="index === activeIndex ? 'bg-moss-green' : 'bg-gray-300 hover:bg-moss-green/50'"
            :aria-label="`Go to testimonial ${index + 1}`"
          ></button>
        </template>
      </div>
      
      <!-- Navigation Arrows -->
      <button 
        @click="prev()" 
        class="absolute top-1/2 -translate-y-1/2 -left-4 md:-left-12 w-10 h-10 rounded-full bg-white shadow-md flex items-center justify-center text-black-olive hover:text-moss-green transition-colors focus:outline-none"
        aria-label="Previous testimonial"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      
      <button 
        @click="next()" 
        class="absolute top-1/2 -translate-y-1/2 -right-4 md:-right-12 w-10 h-10 rounded-full bg-white shadow-md flex items-center justify-center text-black-olive hover:text-moss-green transition-colors focus:outline-none"
        aria-label="Next testimonial"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
    
    <!-- Call to Action -->
    <div class="text-center mt-12">
      <a href="/reservations" class="btn-primary">Experience It Yourself</a>
    </div>
  </div>
</section>