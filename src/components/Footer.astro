      <!-- Column 2: Quick Links -->
      <div>
        <h3 class="text-xl font-medium text-satin-gold mb-4">{t('quickLinks', 'footer')}</h3>
        <ul class="space-y-2">
          <li><a href="#hero" class="text-sm hover:text-satin-gold transition-colors">{t('nav.home')}</a></li>
          <li><a href="#about" class="text-sm hover:text-satin-gold transition-colors">{t('nav.about')}</a></li>
          <li><a href="#menu" class="text-sm hover:text-satin-gold transition-colors">{t('nav.menu')}</a></li>
          <li><a href="#gallery" class="text-sm hover:text-satin-gold transition-colors">{t('nav.gallery')}</a></li>
          <li><a href="#contact" class="text-sm hover:text-satin-gold transition-colors">{t('nav.contact')}</a></li>
          <li><a href="#" class="text-sm hover:text-satin-gold transition-colors">{t('button.bookTable')}</a></li>
        </ul>
      </div>

      <!-- Column 3: Opening Hours -->
      <div>
        <h3 class="text-xl font-medium text-satin-gold mb-4">{t('openingHours')}</h3>
        <ul class="space-y-2">
            <li class="text-sm flex justify-between">
              <span>{t('daily')}</span>
              <span>13:00 - 22:00</span>
            </li>
          
            <li class="text-sm flex justify-between">
              <span>{t('wednesday')}</span>
              <span>{t('closed')}</span>
            </li>
          
        </ul>
        <p class="mt-1 italic text-sm text-satin-gold">({t('kitchenHours')})</p>
      </div>

      <!-- Column 4: Contact -->
      <div>
        <h3 class="text-xl font-medium text-satin-gold mb-4">{t('contact')}</h3>
        <address class="not-italic">
          <p class="text-sm mb-2">{info.address}</p>
          <p class="text-sm mb-2">{info.city}</p>
          <p class="text-sm mb-2">
            <a href={`tel:${info.phone}`} class="hover:text-satin-gold transition-colors">{info.phone}</a>
          </p>
          <p class="text-sm mb-2">
            <a href={`mailto:${info.email}`} class="hover:text-satin-gold transition-colors">{info.email}</a>
          </p>
        </address>
      </div>
    </div>

