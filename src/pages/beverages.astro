<Layout title="Beverages | Botanist">
  <main class="bg-true-black text-white min-h-screen">
    <section class="py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold text-gold mb-4">Beverages</h1>
          <p class="max-w-2xl mx-auto text-slate-200 mb-6">
            Refresh yourself with our selection of hot and cold beverages, crafted with care and quality ingredients.
          </p>
          <a href={import.meta.env.BASE_URL + '/wines'} class="px-4 py-2 rounded-md font-medium transition-colors duration-300 border border-gold text-gold hover:bg-gold hover:text-true-black">
            View Wine List
          </a>
        </div>

        <div class="max-w-4xl mx-auto">
          {beverageCategories.map((category) => (
            <div class="mb-16">
              <h2 class="text-2xl font-semibold text-gold border-b border-gold pb-2 mb-6">{category.name}</h2>
              {category.description && 
                <p class="text-slate-200 italic mb-6">{category.description}</p>
              }
              <div class="grid gap-6">
                {category.items.map((item) => (
                  <div class="flex flex-col border-b border-golden-brown/30 pb-4">
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="text-xl text-white font-medium">
                          {item.name}
                          {item.volume && <span class="text-sm text-slate-300 ml-1">{item.volume}</span>}
                        </h3>
                        {item.region && <p class="text-sm text-gold mt-1">{item.region}</p>}
                      </div>
                      <div class="text-right">
                        <span class="text-gold font-medium">
                          {item.priceGlass ? `€${item.price.toFixed(2)} / €${item.priceGlass.toFixed(2)}` : `€${item.price.toFixed(2)}`}
                        </span>
                      </div>
                    </div>
                    {item.description && <p class="text-sm text-slate-300 mt-2">{item.description}</p>}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-16">
          <p class="mb-6 text-satin-gold italic">All our beverages can be prepared with plant-based milk alternatives upon request.</p>
          <div class="flex justify-center gap-4">
            <Button url={import.meta.env.BASE_URL || "/"} text="Back to Home" style="primary" />
            <Button url={import.meta.env.BASE_URL + '/wines'}  text="View Wine List" style="secondary" />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>